= banner('add_machine_location', 'Add New Machine At This Location', location)
%div[location, :add_machine]{:style => 'display:none;'}
  %span.info Select a machine and then click the Add button.
  .clear
  = form_tag location_machine_xrefs_path, :method => 'post', :id => "add_new_machine_#{location.id}", :remote => true do
    = hidden_field_tag :location_id, location.id
    = select_tag :add_machine_by_id, options_for_select(['']) + options_from_collection_for_select(Machine.order('name'), 'id', 'name', params[:add_machine_by_id]), :class => 'lookup_search_select'
    %br/
    = text_field_tag :add_machine_by_name, params[:add_machine_by_name], :class => 'lookup_search_input'
    %br/
    = submit_tag 'Add', :id => 'add'

  :javascript
    $(function () {
      $('#add_machine_by_name').autocomplete({source: '#{autocomplete_machines_path}'});
    });

    $('#add_new_machine_#{location.id}').submit(function () {
      $('#show_machines_location_#{location.id}').html(loadingHTML());
      $.post(this.action, $(this).serialize(), null, 'script');
      $('#show_machines_location_#{location.id}').load('/#{params[:region]}/locations/#{location.id}/render_machines');

      return false;
    });

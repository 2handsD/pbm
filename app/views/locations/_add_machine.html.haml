= banner('add_machine_location', 'ADD NEW MACHINE TO THIS LOCATION', location)
%div[location, :add_machine]{:style => 'display:none'}

:javascript
  jQuery(function() {
    jQuery('#add_machine_location_banner_#{location.id}').click(function () {
      jQuery('#add_machine_location_#{location.id}').html(loadingHTML());
      jQuery('#add_machine_location_#{location.id}').load('/#{params[:region]}/locations/#{location.id}/render_add_machine');
    });
  });

- if !mobile_device?
  #header{:class => "#{@region ? '' : 'header_home'}"}
    =link_to image_tag('pinballmapcom_nocom.png', :class => "#{@region ? 'header_image' : 'header_image_home'}", :alt => 'Pinball Map Logo'), root_path
    %div{:class => "header_buttons"}
      %div.menu_link
        #menu &#9776;
        %ul#nav.js
          = render :partial => 'pages/menu'
      - if !user_signed_in?
        %div.login.login_region.logged_no
          %div.login_inner
            %span.darkb.login_inner
              = link_to 'Login', new_user_session_path
              %span.login_slash
                |
              = link_to 'Join', new_user_registration_path
      - else
        %div.login.login_region.logged_yes
          %div.login_inner
            %span.darkb.login_inner
              = link_to 'Logout', destroy_user_session_path, :class => "loggedin", method: :delete
              - if (current_user && !current_user.region_id.blank?)
                %span.login_slash
                  |
                = link_to 'Admin', rails_admin_path, :class => "loggedin"
      - if (@region)
        %div.region_logo_dropdown
          %div.other_regions
            %span.region_name_page
              =link_to "#{@region.full_name}", region_homepage_path
          - if !mobile_device?
            %ul.other_regions_list= other_regions_html(@region)
        %div.closest_locations_outer
          %div.closest_locations_inner
            %span.darkb.closest_locations{:onclick => "findClosestLocations('#{@region.name}')"}
              = link_to 'Show Closest Locations', '#', {:id => 'find_closest_locations'}
      - else
        %div.geo_header_outer
          %div.geo_header_inner
            %span.darkb.geo_header{:onclick => "findClosestRegion()"}
              = link_to 'Find Your Closest Map', '#'
- else
  #header{:class => "#{@region ? '' : 'header_home'}"}
    #menu &#9776;
    =link_to image_tag('pinballmapcom_nocom.png', :class => "#{@region ? 'header_image' : 'header_image_home'}", :alt => 'Pinball Map Logo'), root_path, :class => 'logo_link'
    - if user_signed_in?
      =link_to image_tag('user.png', :alt => 'profile icon'), profile_user_path(current_user.id), :class => 'user_icon_link'
    - else
      =link_to image_tag('user.png', :alt => 'login icon'), new_user_session_path, :class => 'user_icon_link'
    %div.menu_link
      %ul#nav.js
        - if !user_signed_in?
          %span.login_list
            %li.login_list= link_to 'Login', new_user_session_path
            %span.login_slash
              |
            %li.login_list= link_to 'Join', new_user_registration_path
        - else
          %span.login_list
            %li.login_list= link_to 'Logout', destroy_user_session_path, method: :delete
            - if (current_user && !current_user.region_id.blank?)
              %span.login_slash
                |
              %li.login_list= link_to 'Admin', rails_admin_path
        = render :partial => 'pages/menu'
  - if (@region)
    #header_lower
      %span.darkb.closest_locations{:style => "float:right;", :onclick => "findClosestLocations('#{@region.name}')"}
        = link_to 'Show Closest Locations', '#', {:id => 'find_closest_locations'}
      %div.region_logo_dropdown
        %div.other_regions
          %span.region_name_page
            =link_to "#{@region.full_name}", region_homepage_path
  - else
    #header_lower
      %div.geo_header_wrapper
        %span.darkb{:onclick => "findClosestRegion()"}
          = link_to 'Find Your Closest Map', '#'

:javascript
  $().ready(function() {
    $(".region_logo_dropdown").hover(function() {
        $(".other_regions_list").show();
      },function(){
        $(".other_regions_list").hide();
    });
    $(document).click(function () {
        $(".other_regions_list").hide();
    });
    $("#menu").click(function() {
      $("#nav").toggle();
    });
    $(document).on('click', function(event) {
      if (!$(event.target).closest('#menu').length) {
        $("#nav").css('display', 'none');
      }
    });
  });
